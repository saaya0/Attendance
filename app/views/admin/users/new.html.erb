<h1>ユーザー新規登録</h1>

<%= form_with model: @user, loca:true do |f| %>
  <table>
    <tr>
      <th><%= f.label :苗字カナ %></th>
      <th><%= f.label :名前カナ %></th>
    </tr>
    <tr>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th><%= f.label :苗字 %></th>
      <th><%= f.label :名前 %></th>
    </tr>
    <tr>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td><%= f.submit '新規登録' %></td>
    </tr>
  </table>
<% end %>